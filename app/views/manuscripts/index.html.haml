- model_class = Manuscript
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @manuscripts.each do |manuscript|
      %tr
        %td= link_to manuscript.title, presentation_manuscript_path(manuscript)
        %td=l manuscript.created_at
        %td
          = link_to t('.outline', :default => t("helpers.links.outline")), manuscript_path(manuscript), :class => 'btn btn-mini'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_manuscript_path(manuscript), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), manuscript_path(manuscript), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_manuscript_path, :class => 'btn btn-primary'
