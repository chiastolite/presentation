- model_class = Manuscript
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @manuscript.title
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @manuscript.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), manuscripts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_manuscript_path(@manuscript), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), manuscript_path(@manuscript), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
